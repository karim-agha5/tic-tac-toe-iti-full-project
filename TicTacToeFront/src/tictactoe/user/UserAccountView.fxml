<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
        <Region id="background" fx:id="background" minHeight="-Infinity" minWidth="-Infinity" />
      <BorderPane>
         <top>
              <Label fx:id="gameTitle" alignment="TOP_CENTER" focusTraversable="false" mouseTransparent="true" styleClass="GameLabel" text="Tic Tac Toe" textAlignment="CENTER" textFill="#e13030" BorderPane.alignment="CENTER">
                  <font>
                      <Font name="Comic Sans MS" size="64.0" />
                  </font>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
              </Label>
         </top>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <center>
            <ListView fx:id="playersList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="80.0" />
               </BorderPane.margin>
            </ListView>
         </center>
         <left>
            <VBox BorderPane.alignment="BOTTOM_CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
               <children>
                  <StackPane fx:id="userAccountParent" />
                  <Region VBox.vgrow="ALWAYS" />
                  <Button fx:id="backButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Back">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <styleClass>
                        <String fx:value="RoundedButton" />
                        <String fx:value="ActionButton" />
                     </styleClass>
                  </Button>
               </children>
            </VBox>
         </left>
         <right>
            <Button fx:id="startButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Start" BorderPane.alignment="BOTTOM_CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <styleClass>
                  <String fx:value="RoundedButton" />
                  <String fx:value="ActionButton" />
               </styleClass>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </Button>
         </right>
      </BorderPane>
   </children>
</StackPane>
